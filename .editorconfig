# http://editorconfig.org

root=true

[*]
indent_style=space
indent_size=4
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=false

[Makefile]
indent_style=tab

[*.py]
max_line_length=119
quote_type=double
insert_final_newline=true

[*.{md, rst}]
max_line_length=119

[*.{yaml, yml}]
indent_size = 2